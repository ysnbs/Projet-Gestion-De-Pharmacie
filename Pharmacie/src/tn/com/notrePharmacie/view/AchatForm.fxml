<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AchatFormController">

    <!-- TITRE -->
    <Label layoutX="280" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Ajouter / Modifier Vente" />

    <!-- FORM ACHAT -->
    <VBox layoutX="30" layoutY="60" spacing="10">

        <HBox spacing="10">
            <Label text="ID Achat:" />
            <TextField fx:id="idAchatField" prefWidth="150" />
        </HBox>

        <HBox spacing="16.0">
            <Label text="User ID:" />
            <TextField fx:id="idUserField" prefWidth="150" />
        </HBox>

        <HBox spacing="30.0">
            <Label text="Date:" />
            <DatePicker fx:id="dateAchatPicker" />
        </HBox>

    </VBox>

    <!-- TABLE LIGNE ACHAT -->
    <TableView fx:id="tableLignesAchat" layoutX="400" layoutY="60" prefHeight="300" prefWidth="370">
        <columns>
            <TableColumn fx:id="colIdProduit" prefWidth="100" text="Produit ID" />
            <TableColumn fx:id="colQuantite" prefWidth="100" text="QuantitÃ©" />
            <TableColumn fx:id="colPrixAchat" prefWidth="100" text="Prix Achat" />
        </columns>
    </TableView>

    <!-- BOUTONS -->
    <Button layoutX="400" layoutY="370" onAction="#addLigne" text="Ajouter Produit" />
    <Button layoutX="520" layoutY="370" onAction="#deleteLigne" text="Supprimer Produit" />
    <Button layoutX="600" layoutY="430" onAction="#handleCancel" text="Annuler" />
    <Button layoutX="700" layoutY="430" onAction="#handleSave" style="-fx-font-weight: bold;" text="Sauvegarder" />
</AnchorPane>
