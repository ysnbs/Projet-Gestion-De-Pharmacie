<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400" prefWidth="600" type="AnchorPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">

    <children>
        <Label layoutX="251.0" layoutY="55.0" text="welcome">
         <font>
            <Font size="24.0" />
         </font></Label>

        <Label layoutX="220.0" layoutY="120.0" text="Username" />
        <TextField fx:id="usernameField" layoutX="306.0" layoutY="116.0" promptText="name" />

        <Label layoutX="221.0" layoutY="170.0" text="Password" />
        <PasswordField fx:id="passwordField" layoutX="306.0" layoutY="166.0" promptText="mot de passe" />

        <Label fx:id="errorLabel" layoutX="260.0" layoutY="294.0" text="Login incorrect" textFill="red" visible="true" />

        <Button layoutX="266.0" layoutY="238.0" onAction="#login" prefHeight="26.0" prefWidth="65.0" text="Login" />
    </children>
</fx:root>
