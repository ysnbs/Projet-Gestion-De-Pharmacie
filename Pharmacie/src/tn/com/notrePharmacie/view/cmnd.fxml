<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CommandeListController">

    <!-- TITRE -->
    <Label layoutX="250.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Liste des commandes" />

    <!-- TABLEAU DES COMMANDES -->
    <TableView fx:id="tableCommandes" layoutX="30" layoutY="60" prefHeight="330" prefWidth="640">

        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="coProduit" prefWidth="92.00000762939453" text="IDProduit" />
            <TableColumn fx:id="coProduit" prefWidth="96.79998779296875" text="Quantité" />
            <TableColumn fx:id="colDate" prefWidth="119.20001220703125" text="Date" />
            <TableColumn fx:id="colTotal" prefWidth="100" text="Prix (D)" />
            <TableColumn fx:id="colFournisseur" prefWidth="88.79995727539062" text="IDFournisseur" />
            <TableColumn fx:id="colEtat" prefWidth="79.2000732421875" text="État" />
        </columns>

    </TableView>

    <!-- BOUTONS -->
    <Button layoutX="30" layoutY="400" onAction="#addCommande" text="Ajouter" />
    <Button layoutX="130" layoutY="400" onAction="#editCommande" text="Modifier" />
    <Button layoutX="230" layoutY="400" onAction="#deleteCommande" text="Supprimer" />
    <Button layoutX="580" layoutY="400" onAction="#back" text="Retour" />

</AnchorPane>
